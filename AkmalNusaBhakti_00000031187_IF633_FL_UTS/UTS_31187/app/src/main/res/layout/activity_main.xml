<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="bottom"
    android:background="@color/grayTwo">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="247dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_row="1"
            android:layout_column="0"
            android:text="Music Player"
            android:textAlignment="center"
            android:textColor="@color/whiteOne"
            android:textSize="28dp"
            android:textStyle="italic" />
    </GridLayout>

    <Button
        android:id="@+id/goToViewProfile"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"

        android:backgroundTint="@color/blackOne"
        android:onClick="moveToViewProfile"
        android:text="Profil"
        android:textAllCaps="true"
        android:textColor="@color/whiteOne"
        android:textSize="12dp"
        app:strokeColor="@color/pink"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/goToLogin"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:backgroundTint="@color/pink"

        android:onClick="moveToLogin"
        android:text="Login"
        android:textAllCaps="true"
        android:textColor="@color/whiteOne"
        android:textSize="12dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nyalakan musicmu!"
        android:textAlignment="center"
        android:textColor="@color/whiteOne"
        android:textSize="28dp"
        android:textStyle="italic" />

</GridLayout>