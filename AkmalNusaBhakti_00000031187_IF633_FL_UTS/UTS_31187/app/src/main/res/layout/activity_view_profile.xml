<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewProfileActivity"
    android:orientation="vertical"
    android:background="@color/blackOne"
    android:gravity="bottom">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:layout_marginTop="0dp"
        android:gravity="bottom">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Akmal Nusa Bhakti"
                android:textColor="@color/whiteOne"
                android:textAlignment="center"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="00000031187"
                android:textColor="@color/grayOne"
                android:textAlignment="center"
                android:textSize="14dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginHorizontal="55dp"
                android:layout_marginBottom="6dp"
                android:text="https://github.com/akmalnb"
                android:textColor="@color/whiteOne"
                android:textAlignment="center"
                android:textSize="12dp" />
        </GridLayout>
        <Button
            android:id="@+id/btnGoToReferences"
            android:onClick="goToReferences"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="referensi"
            android:textSize="12dp"
            android:textAllCaps="true"
            android:textStyle="italic"
            android:textColor="@color/grayTwo"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="40dp"
            android:backgroundTint="@color/teal_700"/>
    </GridLayout>
</GridLayout>